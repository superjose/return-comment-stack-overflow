{
  "manifest_version": 3,
  "name": "Return Comment to Stack Overflow",
  "version": "1.0.0",
  "description": "Updates Stack Overflow comment timestamps to readable date format",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Return Comment to Stack Overflow",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://stackoverflow.com/*", "*://*.stackoverflow.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}